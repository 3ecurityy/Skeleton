<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PlaceholderGradient">

        <attr name="PHG_autoStartAnimation" format="boolean" />
        <attr name="PHG_isShowPlaceHolder" format="boolean" />
        <attr name="PHG_isHoldTouchEventsFromChildren" format="boolean" />

        <!--shape type-->
        <attr name="PHG_shapeType" format="integer">
            <enum name="rect" value="1" />
            <enum name="oval" value="2" />
        </attr>

        <!--color-->
        <attr name="PHG_backgroundMainColor" format="color" />
        <attr name="PHG_BackgroundViewsColor" format="color" />
        <attr name="PHG_centerGradientColor" format="color" />

        <!--animation-->
        <attr name="PHG_animationAutoStart" format="boolean" />
        <attr name="PHG_animationDuration" format="integer" />
        <attr name="PHG_animationDirection" format="integer">
            <enum name="LTR" value="1" />
            <enum name="RTL" value="2" />
            <enum name="TTB" value="3" />
            <enum name="BTT" value="4" />
        </attr>
        <attr name="PHG_animationFinishType" format="integer">
            <enum name="none" value="0" />
            <enum name="alpha" value="1" />
            <enum name="gradient" value="2" />
        </attr>

        <!--cornerRadius-->
        <attr name="PHG_cornerRadius" format="dimension" />
        <attr name="PHG_cornerRadiusTopLeft" format="dimension" />
        <attr name="PHG_cornerRadiusTopRight" format="dimension" />
        <attr name="PHG_cornerRadiusBottomLeft" format="dimension" />
        <attr name="PHG_cornerRadiusBottomLRight" format="dimension" />

        <!--padding-->
        <attr name="PHG_padding" format="dimension" />
        <attr name="PHG_paddingTop" format="dimension" />
        <attr name="PHG_paddingRight" format="dimension" />
        <attr name="PHG_paddingLeft" format="dimension" />
        <attr name="PHG_paddingBottom" format="dimension" />

    </declare-styleable>

</resources>